{
	"manifest_version": 2,

	"name": "TRX ticker",
	"version": "1.0.0",

	"description": "Tronix Price Monitor",
	"author": "Justin Asfour <justin.asfour0@gmail.com",

	"icons" : {
		"16": "16.png",
		"32": "32.png",
		"48": "48.png",
		"128": "128.png"
	},

	"browser_action": {
    	"default_icon": "16.png",
    	"default_popup": "popup.html"
    },

	"background": {
		"scripts": ["shared.js", "eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"alarms",
		"background",
		"https://api.coinmarketcap.com/"
	]

}