{
	"manifest_version": 2,

	"name": "CoinMarketCap Ticker",
	"version": "1.0.0",

	"description": "CoinMarketCap Price Monitor. The Default Ticker is set to TRX",
	"author": "Justin Asfour <justin.asfour0@gmail.com",

	"icons" : {
		"32": "32/icon/trx.png",
		"128": "128/icon/trx.png"
	},

	"browser_action": {
    	"default_icon": "32/icon/trx.png",
    	"default_popup": "popup.html"
    },

	"background": {
		"scripts": ["shared.js", "eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"alarms",
		"background",
		"storage",
		"https://api.coinmarketcap.com/"
	]

}